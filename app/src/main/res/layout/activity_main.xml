<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="viewState"
            type="com.example.wikisearch.ui.MainViewState" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".ui.MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/Theme.WikiSearch.AppBarOverlay">
            <com.example.wikisearch.utils.SymmetricProgressBar
                android:layout_width="match_parent"

                android:visibility="@{viewState.shrimmerVisibility}"
                android:layout_height="4dp" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:textAlignment="center"
                app:popupTheme="@style/Theme.WikiSearch.PopupOverlay"
                app:titleTextColor="@color/black">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="0"

                        android:src="@drawable/wiki" />

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="2"
                        android:iconifiedByDefault="false"

                        android:queryHint="Search Wikipedia"
                        android:shadowColor="@color/black"
                        app:defaultQueryHint="Search Wikipedia" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="0">

                        <ImageView
                            android:id="@+id/microphone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            android:visibility="@{viewState.micVisibility}"
                            app:layout_constraintBottom_toBottomOf="@+id/searchView"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/searchView"
                            app:srcCompat="@drawable/ic_mic" />

                        <LinearLayout

                            android:id="@+id/linearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <net.gotev.speech.ui.SpeechProgressView
                                android:id="@+id/progress_speech"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:visibility="@{viewState.micListening}" />
                        </LinearLayout>
                    </FrameLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <include layout="@layout/content_main" />
        <!--  <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/recyclerView"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="65sp"
              android:text="Featured Advocate"
              android:background="#FEF7FF"/>
  -->
        <!-- <TextView
             android:id="@+id/textView"
             android:textStyle="bold"
             android:textSize="20sp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"

             android:layout_marginTop="80sp"
             android:visibility="@{viewState.emptyViewVisibility}"
             android:text="Advocatepedia Today" />
         <Button
             android:id="@+id/shareButton"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="120sp"
             android:text="s" />-->


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Birthday Wishes"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/wish"
                    app:contentPadding="20sp"
                    android:visibility="@{viewState.emptyViewVisibility}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"

                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"/>
                <EditText
                    android:id="@+id/messageText"
                    android:visibility="@{viewState.emptyViewVisibility}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20sp"
                    android:layout_gravity="center"
                    android:text="I wish you a very very Happy Birthday." />
                <Button
                    android:id="@+id/shareButton"
                    android:visibility="@{viewState.emptyViewVisibility}"
                    android:layout_marginTop="-13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:layout_gravity="center"
                    />


                <TextView
                    android:layout_margin="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="On Thiis Day"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/otd"
                    app:contentPadding="20sp"
                    android:visibility="@{viewState.emptyViewVisibility}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"

                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"/>
                <Button
                    android:id="@+id/shareButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_margin="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Feature Advocate"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/report"
                    app:contentPadding="20sp"
                    android:visibility="@{viewState.emptyViewVisibility}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"

                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"/>
                <Button
                    android:id="@+id/shareButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_margin="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Supreme Court Judgment/order"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/news"
                    app:contentPadding="20sp"
                    android:visibility="@{viewState.emptyViewVisibility}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"

                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"/>


                <Button
                    android:id="@+id/shareButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>